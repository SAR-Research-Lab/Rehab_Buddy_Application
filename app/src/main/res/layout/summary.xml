        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tRbAvgROM"
        app:layout_constraintStart_toStartOf="@+id/tRbAvgROM" />


    <!--Avg POM Error (Â°)\n(Lower is better)-->
    <TextView
        android:id="@+id/tPOMSummary"
        android:layout_width="160dp"
        android:layout_height="47dp"
